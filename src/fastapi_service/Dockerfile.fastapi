FROM python:3.10-slim

RUN apt-get update && apt-get install -y --no-install-recommends     build-essential libglib2.0-0 && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY src/fastapi_service/requirements.txt /app/requirements.txt
RUN pip install --upgrade pip && pip install -r requirements.txt

COPY src/fastapi_service/app /app/app
ENV PYTHONPATH=/app
EXPOSE 8080
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8080"] 
